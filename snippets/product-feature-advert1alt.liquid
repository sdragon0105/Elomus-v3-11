<div class="banner-static static3-elomus1 advert1alt{% if section.settings.bottom_padding %} padding-bottom{% endif %} {% if section.settings.bottom_border %} border-bottom{% endif %}">
  <div class="module-title">
    {% if section.settings.description != blank %} 
    <p class="sub-title">{{ section.settings.description }}</p>
    {% endif %}
    {% if section.settings.heading != blank %} 
    <h2>{{ section.settings.heading }}</h2>
    {% endif %}
  </div>
  <div class="row">
    {% if section.settings.image_position == 'left' %} 
    <div class="col col-sm-6 col-xs-12">
      {% if section.settings.bg-image %}
      <div class="image">
        {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}">
          {% endif %}
          <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ section.settings.bg-image | img_url: 'master' }}" alt=""/>
          {% if section.settings.link != blank %}       
        </a>
        {% endif %}
      </div>
      {% endif %}
    </div>
    {% endif %}
    <div class="col col-sm-6 col-xs-12">
      <div class="text-content">
        {% if section.blocks.size > 0 %}
        <div class="box-options">
          {% for block in section.blocks limit:section.blocks.size %}
          <div class="box box{{forloop.index}}">
            {% if block.settings.use_feature_icon %}
            {% if block.settings.feature_icon != blank %}
            <div class="icon">
              <i class="fa {{block.settings.feature_icon }}"></i>
            </div>
            {% endif %}
            {% else %}
            {% if block.settings.image != blank %}
            <div class="icon">
              <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ block.settings.image | img_url: 'master' }}" alt=""/>
            </div>
            {% endif %}
            {% endif %}
            <div class="text">
              {% if block.settings.text1 != blank %} 
              <p>{{ block.settings.text1 }}</p>
              {% endif %}
              {% if block.settings.text2 != blank %} 
              <span>{{ block.settings.text2 }}</span>
              {% endif %}
            </div>
          </div>
          {% assign ind = forloop.index | times: 1 | modulo:2 %}
          {% if  ind == 0 and forloop.last == false %}
        </div><div class="box-options">
        {% endif %}
        {% endfor %}
        </div>
        {% endif %}
        {% if section.settings.link_text != blank %} 
        <a href="{{ section.settings.link }}" class="link">{{ section.settings.link_text }}</a>
        {% endif %}
      </div>
    </div>
    {% if section.settings.image_position == 'right' %} 
    <div class="col col-sm-6 col-xs-12">
      {% if section.settings.bg-image %}
      <div class="image">
        {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}">
          {% endif %}
          <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ section.settings.bg-image | img_url: 'master' }}" alt=""/>
          {% if section.settings.link != blank %}       
        </a>
        {% endif %}
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>