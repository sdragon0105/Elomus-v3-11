<div id="myCarousel{{ section.id }}-{{product.id}}" class="carousel slide img-other" data-ride="carousel" data-interval="false">
  <!-- product inside carousel -->
  <div class="carousel-inner" role="listbox">
    {% for image in product.images %}
    <div class="item {% if forloop.first == true %}active{% endif %}">
      <a class="product-image" title="{{ product.title }}" href="{{ product.url | within: collection }}">
        {% include 'product-grid-image',image:image %}
      </a>
    </div>
    {% endfor %}
  </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel{{ section.id }}-{{product.id}}" role="button" data-slide="prev">
    <i class="fa fa-angle-left"></i>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel{{ section.id }}-{{product.id}}" role="button" data-slide="next">
    <i class="fa fa-angle-right"></i>
    <span class="sr-only">Next</span>
  </a>
</div>
