<div class="banner-static static2-elomus1{% if section.settings.bottom_padding %} padding-bottom{% endif %} {% if section.settings.bottom_border %} border-bottom{% endif %}">
  {% if section.settings.bg-image %}
  <div class="image">
    <a href="{{ section.settings.link }}">
      <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ section.settings.bg-image | img_url: 'master' }}" alt=""/>
    </a>
  </div>
  {% endif %}

  {% if section.settings.description != blank or section.settings.link_text != blank %}
    <div class="banner-text">
      {% if section.settings.description != blank %}
      <p>{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.link_text != blank %}
      <a href="{{ section.settings.link }}" class="txt txt-btn-style">{{ section.settings.link_text }}</a>
      {% endif %}
    </div>
  {% endif %}
</div>

