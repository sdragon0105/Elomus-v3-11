<div class="banner-static static6-elomus1{% if section.settings.bottom_padding %} padding-bottom{% endif %} {% if section.settings.bottom_border %} border-bottom{% endif %}">
  <div class="row">
    {% if section.settings.image_position == 'left' %} 
    <div class="col col-sm-7 col-xs-12">
      {% if section.settings.bg-image %}
      <div class="image">
        {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}">
          {% endif %}
          <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ section.settings.bg-image | img_url: 'master' }}" alt=""/>
          {% if section.settings.link != blank %}       
        </a>
        {% endif %}
      </div>
      {% endif %}
    </div>
    {% endif %}
    <div class="col col-sm-5 col-xs-12">
      <div class="text-content">
        {% if section.settings.heading != blank %} 
        <h3>{{ section.settings.heading }}</h3>
        {% endif %}
        {% if section.settings.description != blank %} 
        <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.blocks.size > 0 %}
        <div class="box-options">
          <div class="row">
            <div class="col-xs-6">
              {% for block in section.blocks limit:6 %}
              <div class="box box{{forloop.index}}">
                {% if block.settings.use_feature_icon %}
                {% if block.settings.feature_icon != blank %}
                <div class="icon">
                  <i class="fa {{block.settings.feature_icon }}"></i>
                </div>
                {% endif %}
                {% else %}
                {% if block.settings.image != blank %}
                <div class="icon">
                  <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ block.settings.image | img_url: 'master' }}" alt=""/>
                </div>
                {% endif %}
                {% endif %}
                <div class="text">
                  {% if block.settings.text1 != blank %} 
                  <p>{{ block.settings.text1 }}</p>
                  {% endif %}
                  {% if block.settings.text2 != blank %} 
                  <span>{{ block.settings.text2 }}</span>
                  {% endif %}
                </div>
              </div>
              {% if forloop.index == 3 %}
            </div><div class="col-xs-6">
            {% endif %}
            {% endfor %}
            </div>
          </div>
        </div>
        {% endif %}
        {% if section.settings.link_text != blank %} 
        <a href="{{ section.settings.link }}" class="link">{{ section.settings.link_text }}</a>
        {% endif %}
      </div>
    </div>
    {% if section.settings.image_position == 'right' %} 
    <div class="col col-sm-7 col-xs-12">
      {% if section.settings.bg-image %}
      <div class="image">
        {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}">
          {% endif %}
          <img {% if settings.lazyloading_enable %} class="lazyload" data-{% endif %}src="{{ section.settings.bg-image | img_url: 'master' }}" alt=""/>
          {% if section.settings.link != blank %}       
        </a>
        {% endif %}
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>