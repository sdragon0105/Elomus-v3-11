<div class="logo-container">
  <div id="logo" {% if section.settings.logo_padding != '15px 0px 15px 0px' %}style="padding:{{section.settings.logo_padding}}"{% endif %}>
    {% if section.settings.logo %}
    <a href="/" itemprop="url">
      <img src="{{ section.settings.logo | img_url: 'x40' }}"
           alt="{{ section.settings.logo.alt | default: shop.name }}"
           itemprop="logo" class="img-responsive logo"  />
    </a>
    {% else %}
    <a href="/" itemprop="url" class="navbar-brand img-responsive">{{ shop.name }}</a>
    {% endif %}
  </div>
</div>