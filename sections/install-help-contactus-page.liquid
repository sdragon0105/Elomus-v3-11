<!--Contact Us Area Start-->
<div class="container">
  <div class="row">
    <div id="content" class="col-sm-12">
      <!--Map area start -->
      <div >
        {% if section.settings.show_map %}
        {{ section.settings.map_code }}
        {% endif %}
      </div>
      {% if section.settings.show_content %}
      <div >
        {{ page.content }}
      </div>
      {% endif %}
      <!--Map area end -->
      <div class="form-horizontal">
        {% form 'contact' %}
        {% if form.posted_successfully? %}
        <p class="note form-success">
          {{ 'contact.form.post_success' | t }}
        </p>
        {% endif %}

        {% include 'form-errors-custom' %}
        <fieldset>
          <h4 style="font-size: 30px; text-align: center; margin: 40px 0;">Still no luck? Contact us belowâ€¦</h4>
          <div class="form-group form-group--name">
            <label class="col-sm-2 control-label" for="input-name">{{ 'contact.form.name' | t }}<span class="red_asterisk">*</span></label>
            <!-- <div class="col-sm-10">
              <input type="text" id="contactFormName" name="contact[name]" class="form-control" placeholder="{{ 'contact.form.name' | t }}" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" />
            </div> -->
            <div class="col-sm-4 first-name--margin1">
              <input
                type="text"
                id="contactFormName"
                name="contact[name]"
                class="form-control"
                placeholder={{"contact.form.firstname" | t}}
                value="{% if form.name %}{{ form.name }}
                       {% elsif customer %}{{customer.firstname}}{% endif %}"
              />
            </div>
            <div class="col-sm-4">
              <input
                type="text"
                id="contactFormName"
                name="contact[name]"
                class="form-control"
                placeholder={{"contact.form.lastname" | t}}
                value="{% if form.name %}{{ form.name }}
                       {% elsif customer %}{{customer.lsatname}}{% endif %}"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ 'contact.form.email' | t }}<span class="red_asterisk">*</span></label>
            <div class="col-sm-8">
              <input type="text" id="contactFormEmail" name="contact[email]" class="form-control" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ 'contact.form.phone' | t }}<span class="red_asterisk">*</span></label>
            <div class="col-sm-8">
              <input type="text" id="contactFormPhone" name="contact[phone]" class="form-control" placeholder="{{ 'contact.form.phone' | t }}" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ 'contact.form.message' | t }}<span class="red_asterisk">*</span></label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="10" id="contactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
            </div>
          </div>
          {% if section.settings.accept_check_enable %}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">&nbsp;</label>
            <div class="col-sm-10">
              <p style="float: none; text-align: right; clear: both; margin: 10px 0;">
                <input style="float:none; vertical-align: middle;" type="checkbox" id="contact_accept_agree" />
                <label style="display:inline; float:none" for="agree">
                  {{ section.settings.accept_text }}
                </label>
              </p>
            </div>
          </div>
          {% endif %}
        </fieldset>
        <div class="buttons submit">
          <div class="pull-right">
            <input class="btn btn-primary" id="submitMessage" name="submitMessage" type="submit" value="{{ 'contact.form.send' | t }}" />
          </div>
        </div>

        {% endform %}
      </div>
    </div>
  </div>
</div>
<!--End of Contact Us Area-->
{% schema %}
{
   "name": "Contact Us Page",
   "settings": [
      {
        "type": "paragraph",
        "content": "[Video Guide](https://youtu.be/35FFlajP5H4?list=PLvJCnPMUAdwr6XxWVo_f9dkVRh8GNCXoa)"
      },
	    {
        "type": "checkbox",
        "id": "show_map",
        "label": "Show map",
        "default": true
      },
      {
        "type": "textarea",
        "id": "map_code",
        "label": "Map code snippet",
        "info": "Go to [Google Maps](https:\/\/google.com\/maps) for generating code"
      },
	    {
        "type": "checkbox",
        "id": "show_content",
        "label": "Show page content",
 		    "info": "Text added in page created from admin",
        "default": false
      },
      {
        "type": "paragraph",
        "content": "Below options are to add accept option to make it GDPR complaint"
      },
      {
        "type": "checkbox",
        "id": "accept_check_enable",
        "label": "Enable Accept check",
        "default": true
      },
      {
        "type": "textarea",
        "id": "accept_text",
        "label": "Accept Text",
        "default": "I agree with the terms and conditions."
      }
    ]
}
{% endschema %}
{% if section.settings.accept_check_enable %}
<script>
  $(document).ready(function() {
    $('body').on('click', '[name="submitMessage"]', function() {
      if ($('#contact_accept_agree').is(':checked')) {
        $(this).submit();
      }
      else {
        alert("{{ 'cart.general.terms_c_agree' | t }}");
              return false;
              }
              });
      });
</script>
{% endif %}

{% style %}
.red_asterisk {
  color: #ff0000;
  font-size: 15px;
  font-weight: 400;
}
@media screen and (max-width:768px){
  .form-group--name {
    display: grid;
    grid-template-columns: repeat(2,1fr);
  }
  .control-label {
    grid-column: 1/3;
  }
}
{% endstyle %}