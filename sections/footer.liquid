<!--Footer Start-->
{% include section.settings.footer_layout %}
<!--End of Footer-->
{% schema %}
{
   "name": "Footer",
   "class": "section-footer",
   "settings": [
      {
         "type": "select",
         "id": "footer_layout",
         "label": "Select header layout",
         "options": [
            {
               "value": "footer-1",
               "label": "Design 1"
            },
            {
                "value": "footer-2",
                "label": "Design 2"
            }
         ]
      },
      {
        "type": "paragraph",
        "content": "Links and Background color can be set from Theme settings > Color tab"
      },
 	  {
         "type": "header",
         "content": "Contact information"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Logo Image"
      },
      {
         "type": "checkbox",
         "id": "footer_content_enable",
         "label": "Show footer contact info"
      },
      {
         "type": "textarea",
         "id": "footer_about_us",
         "label": "Contact About Us"
      },
      {
         "type": "text",
         "id": "footer_address",
         "label": "Contact Address"
      },
	  {
         "type": "text",
         "id": "footer_phone",
         "label": "Contact Phone"
      },
      {
         "type": "text",
         "id": "footer_email",
         "label": "Contact Email"
      },
      {
         "type": "header",
         "content": "Footer Menu Widgets"
      },
      {
         "type": "link_list",
         "id": "footer_menu_1",
         "label": "Menu 1"
      },
      {
         "type": "link_list",
         "id": "footer_menu_2",
         "label": "Menu 2",
		     "info": "Used in Design 1"
      },
      {
        "type": "header",
        "content": "Footer Instagram Widget",
        "info": "Used in Design 1. Install free app [Section Feed](https:\/\/apps.shopify.com\/section-feed-by-maestrooo) and it will be added automatically"
      },
      {
         "type": "checkbox",
         "id": "footer_insta_enable",
         "label": "Show Instagram widget",
         "default": true
      },
      {
        "type": "text",
        "id": "insta_title",
        "label": "Title",
        "default": "Instagram"
      },
	    {
         "type": "header",
         "content": "Content Box",
		     "info": "Used in Design 2"
      },
      {
         "type": "text",
         "id": "footer_content_box_title",
         "default": "Opening Hours",
         "label": "Content Box Title"
      },
      {
         "type": "textarea",
         "id": "footer_content_box_text",
         "label": "Content Box Text"
      },
      {
         "type": "header",
         "content": "Bottom Footer"
      },
      {
        "type": "textarea",
        "id": "footer_content_text",
        "label": "Contact text",
        "info": "Use basic HTML to format text"
      },
      {
        "type": "image_picker",
        "id": "payment_image",
        "label": "Payment Image",
        "info": "Add this image to show an image of payment icons otherwise default icons will be shown if payments enabled"
      },
      {
         "type": "checkbox",
         "id": "footer_social_enable",
         "label": "Show social media icons",
         "info": "Add accounts in Social media section"
      }
   ]
}

{% endschema %}

