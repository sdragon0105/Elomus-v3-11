<!--FAQ -->
<div class="container">
  <div class="row">
    <div id="content" class="col-sm-12">
      {{ page.content }}
      <section class="cd-faq">
        <div class="cd-faq-items">
          <ul id="" class="cd-faq-group">
            <li class="cd-faq-title" style="display:none;"><h2>{{ page_title }}</h2></li>
            {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
            <li>
              <a class="cd-faq-trigger" href="#0">{{ block.settings.question }}</a>
              <div class="cd-faq-content">
                <p>{{ block.settings.answer }}</p>
              </div> <!-- cd-faq-content -->
            </li>
            {% endfor %}
            {% endif %}
          </ul> <!-- cd-faq-group -->

        </div> <!-- cd-faq-items -->
      </section> <!-- cd-faq -->
      <div class="faq-btn">
        <a href="{{ section.settings.button_link_1 }}" class="btn btn--secondary btn--small" style="background-color: #6FD2D7 !important;">
          {{ section.settings.button_label_1 }}
        </a>
        <a href="{{ section.settings.button_link_2 }}" class="btn btn--secondary btn--small">
          {{ section.settings.button_label_2 }}
        </a>
      </div>
    </div>
  </div>
</div>
<!--End of FAQ Area-->
